                                                    <DataGridTextColumn Header="11.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="12.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="13.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="14.05" Binding="{Binding Period}"/>
                                                    <DataGridTextColumn Header="15.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="16.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="17.05" Binding="{Binding Period}" />
                                                    <DataGridTextColumn Header="18.05" Binding="{Binding Period}" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        
                                    </DockPanel>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </TabItem>

                <TabItem Header="Clanci">
