                                    Height="24"
                                    Width="24" />
                                        </Button>

                                        <Button DockPanel.Dock="Right" Margin="10,10,20,10"
                                  Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                  HorizontalAlignment="Left"
                                  ToolTip="Pretraži">
