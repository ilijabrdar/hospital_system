                                  ToolTip="Pretraži">
                                <materialDesign:PackIcon
                                    Kind="Search"
                                    Height="24"
                                    Width="24" />
                            </Button>
                            <TextBox  DockPanel.Dock="Right" HorizontalAlignment="Right" MinWidth="100" Margin="10"/>

