<Window x:Class="HCIproject.SideBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HCIproject"
        xmlns:val="clr-namespace:HCIproject.Validation"

        mc:Ignorable="d"
        Title="SideBar"  Height="450" Width="800">
    <Window.Resources>
        <Color x:Key="Color1">#FFA2D9CE</Color>
    </Window.Resources>
    <StackPanel x:Name="ResizePanel" Background="#D0ECE7" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >

        <TabControl x:Name="MyTabControl"  TabStripPlacement="Left"  Margin="20" SelectionChanged="MyTabControl_SelectionChanged" >
            <TabItem x:Name="tabPocetna" Header="Početna stranica" FontSize="19" Background="#A2D9CE" >
                <StackPanel x:Name="pocetnaGrid" Background="#D5F5E3"  Orientation="Vertical" HorizontalAlignment="Stretch">
                    <StackPanel Background="#D5F5E3"  Orientation="Horizontal">
                        <Image HorizontalAlignment="Left" Height="106" Margin="36,45,0,0" VerticalAlignment="Top" Width="103" Source="user.png"/>
                        <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ImePrzSet" Text="{Binding ImePrezime}" Grid.Column="0" Grid.Row="0"  FontSize="20" FontWeight="Bold" />
                            <TextBlock x:Name="SpecSet" Grid.Column="0" Grid.Row="1" Text="Lekar opšte prakse" FontSize="16" />

                            <Label Grid.Column="0" Grid.Row="2" Content="Datum rođenja" FontSize="13" />
                            <TextBlock x:Name="DatSet" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" FontSize="13" />

                            <Label Grid.Column="0" Grid.Row="3" Content="Jmbg" FontSize="13" />
                            <TextBlock x:Name="JmbgSet" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" FontSize="13" />

                            <Label Grid.Column="0" Grid.Row="4" Content="Email" FontSize="13" />
                            <TextBlock x:Name="EmailSet" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right" FontSize="13" />

                            <Label Grid.Column="0" Grid.Row="5" Content="Telefon" FontSize="13" />
                            <TextBlock x:Name="TelSet" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right" FontSize="13" />
                        </Grid>
                    </StackPanel>
                    <Grid  Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Za današnji datum zakazano termina:" Margin="36,0,0,0"  Grid.Column="0" Grid.Row="0" FontSize="16" HorizontalAlignment="Left" Height="29"  VerticalAlignment="Top" Width="283"/>
