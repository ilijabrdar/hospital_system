                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Content="Milan Jovanovic" FontSize="16" />
                                    <Label Grid.Row="1" Grid.Column="0" Content="Zorana Markovic" FontSize="16" />
                                    <Label Grid.Row="2" Grid.Column="0" Content="Filip Jovic" FontSize="16" />
                                    <Label Grid.Row="3" Grid.Column="0" Content="Milan Zoric" FontSize="16" />
                                    <Label Grid.Row="4" Grid.Column="0" Content="Sinisa Pavlovic" FontSize="16" />
                                    <Label Grid.Row="5" Grid.Column="0" Content="Anja Stramic" FontSize="16" />

                                    <Button Grid.Row="0" Grid.Column="1" Content="otvori" FontSize="15" Margin="4,0,-20,4" Foreground="#DDFFFFFF" Background="#A2D9CE" Click="Button_Click_1"  VerticalAlignment="Bottom" BorderBrush="#FF1FEECD" />
                                    <Button Grid.Row="1" Grid.Column="1" Content="otvori" Margin="4,4,-20,4" FontSize="14" Foreground="#DDFFFFFF" Background="#A2D9CE" BorderBrush="#FF1FEECD" />
                                    <Button Grid.Row="2" Grid.Column="1" Content="otvori"  FontSize="15" Margin="4,4,-20,4" Foreground="#DDFFFFFF" Background="#A2D9CE" BorderBrush="#FF1FEECD" />
                                    <Button Grid.Row="3" Grid.Column="1" Content="otvori"  FontSize="15" Margin="4,4,-20,4" Foreground="#DDFFFFFF" Background="#A2D9CE" BorderBrush="#FF1FEECD" />
                                    <Button Grid.Row="4" Grid.Column="1" Content="otvori"  FontSize="15" Margin="4,4,-20,4" Foreground="#DDFFFFFF" Background="#A2D9CE" BorderBrush="#FF1FEECD" />
                                    <Button Grid.Row="5" Grid.Column="1" Content="otvori"  FontSize="15" Margin="4,4,-20,4" Background="#A2D9CE" BorderBrush="#FF1FEECD"/>
                                </Grid>
                            </ScrollViewer>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </TabItem>
            <TabItem Header="Evidencija lekova" FontSize="19"  Background="#A2D9CE">
                <StackPanel  x:Name="evidencijaGrid" Background="#D5F5E3" Orientation="Vertical" >
                    <Label Content="Validacija sastava leka" FontSize="17" FontWeight="Bold"/>
                    <Border  BorderBrush="#FFA2D9CE" BorderThickness="8" CornerRadius="8,8,8,8"  Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Naziv leka" Grid.Row="0" Grid.Column="0" Margin="10" FontSize="14" FontWeight="UltraLight"/>
                            <Label Content="Klikom na dugme validirajte sastav leka" Margin="10" HorizontalContentAlignment="Center" Grid.Row="0" Grid.Column="1" FontSize="14" FontWeight="UltraLight" />

                            <Label Content="Nimulid" Grid.Row="1" FontSize="17"  Margin="10" Grid.Column="0" FontWeight="Bold"/>
