<Window x:Class="HCIproject.ExaminationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HCIproject"
        mc:Ignorable="d"
        Title="Examination" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <StackPanel Background="#D0ECE7" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <WrapPanel Height="45" Margin="0,0,-0.4,0" Background="#D5F5E3" >
            <Label Content="Pregled kartona" FontSize="16" Margin="10" Height="34"></Label>
            <Button Content="Pregledaj" Margin="5"  FontSize="16" Background="#A2D9CE" BorderBrush="#FF1FEECD"  />
        </WrapPanel>
        <StackPanel>
            <ScrollViewer x:Name="examScrool" SizeChanged="examScrool_SizeChanged">
                <Border  BorderBrush="#A2D9CE" BorderThickness="4" CornerRadius="8,8,8,8"  Margin="5">
                    <Grid  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="145"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Anamneza" Grid.Row="0" Grid.Column="0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0"  Grid.Column="1" Grid.ColumnSpan="4" AcceptsReturn="True" CaretBrush="#FF1FEECD" />

                        <Label Content="Simptomi" Grid.Row="1" Grid.Column="0" FontSize="18" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="4" AcceptsReturn="True" CaretBrush="#FF1FEECD"/>

                        <Label Content="Dijagnoza" Grid.Row="2" Grid.Column="0" FontSize="18" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="4" />
                        <TextBox Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="4" AcceptsReturn="True" CaretBrush="#FF1FEECD"/>


                        <Label Content="Recept" Grid.Row="4" Grid.Column="0" FontSize="18" VerticalAlignment="Center"/>
                        <Grid Width="124" Grid.Column="1" Grid.Row="4" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_2" >
                                <TextBlock  Text="Dodaj" />
                            </Button>
                        </Grid>

                        <Label Content="Uput" Grid.Row="4" Grid.Column="3" FontSize="18" Margin="10" VerticalAlignment="Center"/>
                        <Grid Width="124" Grid.Column="4" Grid.Row="4" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,10,10,9.6" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_3" >
                                <TextBlock  Text="Dodaj" />
                            </Button>
                        </Grid>

                        <Label Content="Bolničko lečenje" Grid.Row="5" Grid.Column="0" FontSize="18" VerticalAlignment="Center" />
                        <Label Content="Hospitalizacija" Grid.Row="5" Grid.Column="1" FontSize="18" Margin="10" VerticalAlignment="Center" />
                        <Grid Width="124" Grid.Column="2" Grid.Row="5" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,10,10,9.6" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_4" >
                                <TextBlock  Text="Dodaj" />
                            </Button>
                        </Grid>
                        <Label Content="Operacija" Grid.Row="5" Grid.Column="3" FontSize="18" Margin="10" VerticalAlignment="Center" />
                        <Grid Width="124" Grid.Column="4" Grid.Row="5" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,10,10,9.6" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_6" >
                                <TextBlock  Text="Dodaj" />
                            </Button>
                        </Grid>
                        <Label Content="Kontrola" Grid.Row="6" Grid.Column="0" FontSize="18" VerticalAlignment="Center" />
                        <Grid Width="124" Grid.Column="1" Grid.Row="6" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,10,10,9.6" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_5" >
                                <TextBlock  Text="Zakaži" Height="24" />
                            </Button>
                        </Grid>
                        <Label Content="Izveštaj anamneza i recept" Grid.Row="7" Grid.Column="0" FontSize="18" VerticalAlignment="Center"/>
                        <Grid Width="124" Grid.Column="1" Grid.Row="7" >
                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" Margin="10,10,10,9.6" Background="#A2D9CE" Height="Auto" materialDesign:ButtonAssist.CornerRadius="25" ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="Button_Click_2" >
                                <TextBlock  Text="Štampaj" />
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </ScrollViewer>
        </StackPanel>
        <WrapPanel FlowDirection="RightToLeft" Background="#D5F5E3" >
            <Button Content="Otkaži" FontSize="18" Height="30" Width="100"  Margin="10,10,10,20" Background="#A2D9CE" Click="Button_Click" BorderBrush="#FF1FEECD" ></Button>
            <Button Content="Potvrdi" FontSize="18" Height="30" Width="100"  Margin="10,10,10,20" Background="#A2D9CE" Click="Button_Click_1" BorderBrush="#FF1FEECD" ></Button>
        </WrapPanel>
    </StackPanel>
</Window>
