        <Label Content=":" HorizontalAlignment="Left" Margin="84,90,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="309,90,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="-" HorizontalAlignment="Left" Margin="234,50,0,0" VerticalAlignment="Top" Grid.Column="1"/>
